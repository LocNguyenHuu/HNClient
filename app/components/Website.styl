.websiteContainer
	position: absolute
	left: 400px
	height: 100%
	overflow: hidden

.webviewContainer
	margin-top: 41px
	height: calc(100% - 41px)

	webview
		height: 100%

.header
	padding-bottom: 5px

.title
	display: inline-block
	width: calc(100% - 60px)
	height: 22px
	overflow: hidden
	text-overflow: ellipsis

.navigation
	position: absolute
	left: 10px
	top: 6px
	font-size: 25px

	i:first-child
		margin-right: 5px

	i
		cursor: pointer

		&:hover
			color: darken(white, 5%)

	.disabledNavigation
		cursor: default
		pointer-events: none
		opacity: .5
