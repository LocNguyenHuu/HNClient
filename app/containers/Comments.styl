.commentContainer
	position: absolute
	right: 0
	height: 100%
	overflow: scroll
	padding: 10px
	padding-top: 0
	box-sizing: border-box
	background-color: white

.loading, .failed
	i
		font-size: 17px
		margin-right: 15px

.commentList
	margin-top: 55px
	height: calc(100% - 55px)
	overflow: scroll

.pseudoTextarea
	border: 1px solid grey
	padding: 5px
	border-radius: 5px
	margin-bottom: 10px
	color: grey
	background: #F3F2F2
	cursor: text

.selfPost
	margin-bottom: 10px

.about
	background-color: lighten(#e07506, 10%)
	color: white
	padding: 10px 14px
	font-weight: bold

.user
	margin-right: 10px
	cursor: pointer

.time_ago
	margin-left: 10px

.content
	padding: 10px
	border: 1px solid rgba(0,0,0,.3)
	border-top: 0
